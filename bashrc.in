if test "${PYTHONFLU_ROOT_DIR}x" = "x" ; then
   export PYTHONFLU_ROOT_DIR="@abs_top_builddir@"
   echo PYTHONFLU_ROOT_DIR=\"${PYTHONFLU_ROOT_DIR}\"

   source ${PYTHONFLU_ROOT_DIR}/env.sh

   export PATH=${PYTHONFLU_ROOT_DIR}:${PATH}
   export PYTHONPATH=${PYTHONFLU_ROOT_DIR}:${PYTHONPATH}
   export LD_LIBRARY_PATH=${PYTHONFLU_ROOT_DIR}:${LD_LIBRARY_PATH}
fi


