pythonflu_root_dir:=@abs_top_builddir@

include @abs_top_builddir@/Foam/foam.version.makefile


#--------------------------------------------------------------------------------------
__CPPFLAGS__ := $(__CPPFLAGS__) \
	@OPENFOAM_MESHTOOLS_CPPFLAGS@


#--------------------------------------------------------------------------------------
__LDFLAGS__ := $(__LDFLAGS__) \
	@OPENFOAM_MESHTOOLS_LIBS@ 


#--------------------------------------------------------------------------------------
sources = \
	@abs_top_builddir@/Foam/src/meshTools/coordinateSystems/coordinateRotation/coordinateRotation.cxx \
	@abs_top_builddir@/Foam/src/meshTools/coordinateSystems/coordinateSystem.cxx \
	@abs_top_builddir@/Foam/src/OpenFOAM/containers/Lists/PtrList/PtrList_coordinateSystem.cxx \
	@abs_top_builddir@/Foam/src/OpenFOAM/containers/Lists/PtrList/IOPtrList/IOPtrList_coordinateSystem.cxx \
	@abs_top_builddir@/Foam/src/meshTools/coordinateSystems/coordinateSystems.cxx \
	@abs_top_builddir@/Foam/src/meshTools/directMapped/directMappedPolyPatch/directMappedPatchBase.cxx \


#--------------------------------------------------------------------------------------
include @abs_top_builddir@/Foam/include.foam.makefile


